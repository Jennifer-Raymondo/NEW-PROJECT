doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Login | MWF Furniture
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')
  body
    // Login Form Container
    form(method="POST" action="/login" class="login-container")
      // Error Message (now centered inside the form)
      if error
        .alert.alert-danger.text-center(role='alert') #{error}

      h2.text-center.mb-4(style='font-weight: bolder;') Login

      // Username
      .mb-3
        label.form-label(for='username') Username
        input#username.form-control(type='text' name="username" placeholder='Enter your username' required)

      // Password
      .mb-3
        label.form-label(for='password') Password
        input#password.form-control(type='password' name="password" placeholder='Enter your password' required)

      // Login Button
      button.btn.btn-custom(type="submit") Login

    // Auto-hide error after 3 seconds
    script.
      setTimeout(() => {
        const alert = document.querySelector('.alert');
        if (alert) alert.style.display = 'none';
      }, 20000);
