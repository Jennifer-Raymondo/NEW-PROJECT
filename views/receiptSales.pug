doctype html
html
  head
    meta(charset="UTF-8")
    title Sale Receipt - MWF
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
  body
    .container.mt-5
      h2.text-center MWF Sales Receipt
      hr
      p Customer: #{sale.customerName}
      p Sales Agent: #{sale.salesAgent}
      p Transport: #{sale.transport}
      p Date: #{sale.Date ? sale.Date.toLocaleDateString() : ''}
      hr
      table.table.table-bordered
        thead
          tr
            th Product
            th Quantity
            th Unit Price
            th Total
        tbody
          tr
            td #{sale.productName}
            td #{sale.quantity}
            td #{sale.sellingPrice} Shs
            td #{sale.quantity * sale.sellingPrice} Shs
      hr
      h5.text-end Total: #{sale.quantity * sale.sellingPrice} Shs
      p.text-center Thank you for your purchase!
