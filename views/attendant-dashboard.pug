doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF Attendant Dashboard
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
  link(rel='stylesheet' href='css/style.css')
// Navbar
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='#') MWF Attendant Dashboard
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse.justify-content-end
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/attendant-dashboard') Dashboard
        li.nav-item
          a.nav-link(href='/attendant-sales') Sales
        li.nav-item
          a.nav-link.text-danger(href='/logout') Log out
// Dashboard Content
.container.my-4
  h2.mb-4 Welcome, Attendant
  // Dashboard Cards
  .row.g-4
    .col-md-3
      .card.text-center.p-3.shadow-sm
        .card-body
          i.bx.bx-dollar-circle.bx-lg
          h5.card-title.mt-2 Sales
          p.card-text Record and view your sales.
          a.btn.btn-outline-primary.btn-sm(href='/sales') Open
    .col-md-3
      .card.text-center.p-3.shadow-sm
        .card-body
          i.bx.bx-truck.bx-lg
          h5.card-title.mt-2 Deliveries
          p.card-text View assigned deliveries.
          a.btn.btn-outline-primary.btn-sm(href='/attendant-delivery') Check
    .col-md-3
      .card.text-center.p-3.shadow-sm
        .card-body
          i.bx.bx-user.bx-lg
          h5.card-title.mt-2 Profile
          p.card-text Update your details and settings.
          a.btn.btn-outline-primary.btn-sm(href='/attendant-profile') View
// Scripts
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
script(src='https://cdn.jsdelivr.net/npm/chart.js')
script.
  // Sales Chart
  const salesCtx = document.getElementById("attendantSalesChart").getContext("2d");
  new Chart(salesCtx, {
  type: "bar",
  data: {
  labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
  datasets: [{
  label: "Monthly Sales",
  data: [5000, 7000, 8000, 6500, 7200, 9000],
  backgroundColor: "#8B4513"
  }]
  },
  options: { responsive: true, scales: { y: { beginAtZero: true } } }
  });
  // Stock Chart
  const stockCtx = document.getElementById("attendantStockChart").getContext("2d");
  new Chart(stockCtx, {
  type: "line",
  data: {
  labels: ["Chairs", "Tables", "Beds", "Wardrobes", "Sofas"],
  datasets: [{
  label: "Stock Levels",
  data: [120, 80, 50, 30, 45],
  borderColor: "#A0522D",
  backgroundColor: "rgba(160,82,45,0.2)",
  fill: true,
  tension: 0.3
  }]
  },
  options: { responsive: true, scales: { y: { beginAtZero: true } } }
  });
