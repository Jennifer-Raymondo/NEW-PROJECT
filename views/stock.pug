doctype html
html
  head
    meta(charset='UTF-8')
    title Stock Management - MWF
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='css/style.css')

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.py-2
      .container-fluid
        a.navbar-brand(href='dashboard') MWF
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/sales') Sales
            li.nav-item
              a.nav-link(href='/stock') Stock
            //- li.nav-item
            //-   a.nav-link(href='/customers') Customer
            //- li.nav-item
            //-   a.nav-link(href='/users') User Manager
            //- li.nav-item
            //-   a.nav-link(href='/reports') Reports
            //- li.nav-item
            //-   a.nav-link(href='/delivery') Delivery
            //- li.nav-item
              a.nav-link.text-danger(href='/logout') log out

    .container.mt-5
      .row.justify-content-center
        .col-md-8.col-lg-6
          .card.shadow-lg.p-4(style="background-color:#DEB887; border-radius:10px;")
            h2.text-center.mb-4 Record New Stock
            hr
            form(action='/stock' method='post')
              .row.mb-3
                .col-md-6
                  label.form-label Product Name
                  input.form-control(type='text' required name='productName' placeholder='e.g. Sofa Set')
                .col-md-6
                  label.form-label Product Type
                  select.form-select(required name='productType')
                    option(disabled selected) Choose...
                    option Wood
                    option Furniture

              .row.mb-3
                .col-md-6
                  label.form-label Supplier Name
                  input.form-control(type='text' required name='supplierName' placeholder='e.g. Nile Timbers Ltd.')
                .col-md-6
                  label.form-label Quantity
                  input.form-control(type='number' required name='quantity')

              .row.mb-3
                .col-md-6
                  label.form-label Cost Price (UGX)
                  input.form-control(type='number' required name='costPrice')
                .col-md-6
                  label.form-label Selling Price (UGX)
                  input.form-control(type='number' required name='sellingPrice')

              .row.mb-3
                .col-md-6
                  label.form-label Date Received
                  input.form-control(type='date' required name='dateReceived')
                .col-md-6
                  label.form-label Quality
                  select.form-select(required name='quality')
                    option(value='') Select quality
                    option(value='premium') Premium
                    option(value='standard') Standard
                    option(value='lowGrade') Low Grade

              .row.mb-3
                button.btn.btn-dark.w-100(type='submit') Add to Stock

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
