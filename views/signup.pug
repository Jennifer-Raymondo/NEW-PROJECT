doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Employee Registration - MWF
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.py-2
      .container-fluid
        a.navbar-brand(href='/dashboard') MWF
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/employee') Employees
            li.nav-item
              a.nav-link(href='/sales') Sales
            li.nav-item
              a.nav-link(href='/stock') Stock

    // Registration Form
    .container.mt-5
      .employee-form-container.mx-auto(
        style='max-width: 650px; background-color: burlywood; padding: 30px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.3);'
      )
        h2.text-center.mb-4(style="font-weight: bold; color: #3e2723;") Register Employee
        form(action= editing ? `/edit-employee/${editing._id}` : '/signup' method="post")
          // Employee Info
          .row.mb-3
            .col-md-6
              label.form-label Full Name
              input.form-control(type='text' required name='fullname')
            .col-md-6
              label.form-label Email
              input.form-control(type='email' required name='email')
          
          .row.mb-3
            .col-md-6
              label.form-label Phone
              input.form-control(type='text' required name='phone')
            .col-md-6
              label.form-label Department
              select.form-select(name='department' required)
                option(value='') Choose
                option(value='Sales') Sales
                option(value='Stock') Stock
                option(value='Delivery') Delivery
                option(value='Management') Management
          // Account Info
          .row.mb-3
            .col-md-6
              label.form-label Username
              input.form-control(type='text' required name='username')
            .col-md-6
              label.form-label Password
              input.form-control(type='password' required name='password')
          
          .mb-3
            label.form-label Role
            select.form-select(name='role' required)
              if firstManager
                option(value='manager' selected) Manager
              else
                option(value='attendant') Attendant
                option(value='supervisor') Supervisor
                option(value='manager' disabled) Manager (restricted)

          // Submit
          .d-grid
            button.btn.btn-brown.text-white(type='submit' style="background-color: #5d4037;") Register Employee

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
