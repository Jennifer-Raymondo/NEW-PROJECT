        li.nav-item
          a.nav-link.text-danger(href='/logout') log out
.container.report-container.mt-5
  h2.text-center.mb-4 MWF Sales Report
  // Filters
  .row.mb-4.g-3
    .col-md-3
      input.form-control(type='date' placeholder='From' name='from')
    .col-md-3
      input.form-control(type='date' placeholder='To' name='to')
    .col-md-3
      select.form-select
        option(value='') Payment Type
        option(value='cash') Cash
        option(value='cash') Cheque
        option(value='cash') Bank Overdraft
    .col-md-3
      button.btn.btn-dark.w-100 Filter
  // Report Table
  .table-responsive
    table.table.table-striped.table-bordered.align-middle.text-center
      thead.table-dark
        tr
          th Date
          th Customer Name
          th Product Name
          th Product Type
          th Quantity
          th Unit Price (UGX)
          th Total Price (UGX)
          th Payment Method
          th Sales Agent
          th Transport
          th Notes
      tbody
        // Example Row
        tr
          td 2025-07-25
          td GreenTech Ltd
          td Hardwood Timber
          td Wood
          td 100
          td 35,000
          td 3,675,000
          td Cheque
          td Agnes
          td Yes
          td Urgent Delivery
        tr
          td 2025-07-24
          td Joseph K.
          td Mahogany Bed
          td Furniture
          td 2
          td 450,000
          td 945,000
          td Cash
          td Ben
          td No
          td Normal pickup
