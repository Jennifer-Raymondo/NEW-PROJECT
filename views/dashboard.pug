extends layout

block navbar
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
      a.navbar-brand(href='/dashboard') MWF Dashboard
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse.justify-content-end
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/dashboard') Dashboard
          li.nav-item
            a.nav-link(href='/sales') Sales
          li.nav-item
            a.nav-link(href='/stock') Stock
          li.nav-item
            a.nav-link(href='/signup') Signup
          li.nav-item
            a.nav-link.text-danger(href='/logout') Log out

block content
  .container.my-5
    h2.mb-4 Welcome, Manager

    .row.g-4
      // Row 1
      .col-12.col-md-4
        a.text-decoration-none(href='/finishedProducts')
          .card.text-center.shadow-sm.summary-card
            .card-body.p-2
              i.bx.bx-cart
              h5.mt-2 Total Stock Expenses
              p #{totalStockExpense} Shs
      .col-12.col-md-4
        a.text-decoration-none(href='/finishedProducts')
          .card.text-center.shadow-sm.summary-card
            .card-body.p-2
              i.bx.bx-package
              h5.mt-2 Products Available
              p #{finishedProducts.totalQuantity} items
      .col-12.col-md-4
        a.text-decoration-none(href='/salesRecords')
          .card.text-center.shadow-sm.summary-card
            .card-body.p-2
              i.bx.bx-receipt
              h5.mt-2 Sales Records
              p #{salesRecords.totalCount} records

      // Row 2
      .col-12.col-md-4
        .card.text-center.p-3.shadow-sm.summary-card
          .card-body
            i.bx.bx-package.bx-lg
            h5.card-title.mt-2 Stock Items
            p.card-text View and update current stock.
            a.btn.btn-outline-primary.btn-sm(href='/stocklist') Manage
      .col-12.col-md-4
        .card.text-center.p-3.shadow-sm.summary-card
          .card-body
            i.bx.bx-dollar-circle.bx-lg
            h5.card-title.mt-2 Sales
            p.card-text View and record sales.
            a.btn.btn-outline-primary.btn-sm(href='/saleslist') Open
      .col-12.col-md-4
        .card.text-center.p-3.shadow-sm.summary-card
          .card-body
            i.bx.bx-bar-chart.bx-lg
            h5.card-title.mt-2 Reports
            p.card-text Check performance reports.
            a.btn.btn-outline-primary.btn-sm(href='/reports') View

  style.
    .summary-card {
      background-color: burlywood;
      color: #4e342e;
      border-radius: 0.75rem;
      transition: transform 0.2s ease-in-out;
      padding: 1rem;
    }
    .summary-card:hover {
      transform: translateY(-3px);
    }
    .summary-card i {
      font-size: 2rem;
      color: #4e342e;
    }
    .summary-card h5 {
      font-size: 1rem;
      margin-top: 0.5rem;
    }
    .summary-card p {
      font-size: 1.1rem;
      font-weight: bold;
      margin: 0;
    }
