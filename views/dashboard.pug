doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title MWF Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
    link(rel='stylesheet' href='css/style.css')
    style.
      .summary-card {
        background-color: burlywood;
        color: #4e342e; /* dark brown */
        border-radius: 0.75rem;
        transition: transform 0.2s ease-in-out;
        padding: 1rem;
      }
      .summary-card:hover {
        transform: translateY(-3px);
      }
      .summary-card i {
        font-size: 2rem;
        color: #4e342e;
      }
      .summary-card h5 {
        font-size: 1rem;
        margin-top: 0.5rem;
      }
      .summary-card p {
        font-size: 1.1rem;
        font-weight: bold;
        margin: 0;
      }

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href='/dashboard') MWF Dashboard
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse.justify-content-end
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/sales') Sales
            li.nav-item
              a.nav-link(href='/saleslist') Saleslist
            li.nav-item
              a.nav-link(href='/stock') Stock
            li.nav-item
              a.nav-link(href='/stocklist') Stocklist
            li.nav-item
              a.nav-link.text-danger(href='/logout') Log out

    // Dashboard Content
    .container.my-5
      h2.mb-4 Welcome, Manager

      // ðŸ”¹ Summary Cards Row
      .row.g-3.mb-5
        .col-6.col-md-3
          a.text-decoration-none(href='/saleslist')
            .card.text-center.shadow-sm.summary-card
              .card-body.p-2
                i.bx.bx-dollar-circle
                h5.mt-2 Total Sales
                p #{totalSales} UGX
        .col-6.col-md-3
          a.text-decoration-none(href='/stocklist')
            .card.text-center.shadow-sm.summary-card
              .card-body.p-2
                i.bx.bx-cart
                h5.mt-2 Total Stock Expenses
                p #{totalStockExpense} Shs
        .col-6.col-md-3
          a.text-decoration-none(href='/finishedProducts')
            .card.text-center.shadow-sm.summary-card
              .card-body.p-2
                i.bx.bx-package
                h5.mt-2 Finished Products
                 p #{finishedProducts.totalQuantity} items
        .col-6.col-md-3
          a.text-decoration-none(href='/rawMaterials')
            .card.text-center.shadow-sm.summary-card
              .card-body.p-2
                i.bx.bx-truck
                h5.mt-2 Raw Materials
                p #{rawMaterials.totalQuantity} items
      // ðŸ”¹ Quick Links Section
      .row.g-4
        .col-12.col-md-4
          .card.text-center.p-3.shadow-sm.summary-card
            .card-body
              i.bx.bx-package.bx-lg
              h5.card-title.mt-2 Stock Items
              p.card-text View and update current stock.
              a.btn.btn-outline-primary.btn-sm(href='/stocklist') Manage
        .col-12.col-md-4
          .card.text-center.p-3.shadow-sm.summary-card
            .card-body
              i.bx.bx-dollar-circle.bx-lg
              h5.card-title.mt-2 Sales
              p.card-text View and Record sales.
              a.btn.btn-outline-primary.btn-sm(href='/saleslist') Open
        .col-12.col-md-4
          .card.text-center.p-3.shadow-sm.summary-card
            .card-body
              i.bx.bx-bar-chart.bx-lg
              h5.card-title.mt-2 Reports
              p.card-text Check performance reports.
              a.btn.btn-outline-primary.btn-sm(href='/reports') View

    // Scripts
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='https://cdn.jsdelivr.net/npm/chart.js')
